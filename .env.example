# Agentic Startup Studio Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=development

# Secret key for cryptographic operations (will be auto-generated by setup script)
SECRET_KEY=your_secret_key_here_change_in_production

# Debug mode (set to False in production)
DEBUG=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://studio:studio@localhost:5432/studio
POSTGRES_DB=studio
POSTGRES_USER=studio
POSTGRES_PASSWORD=studio

# Database connection pool settings
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Cache settings
CACHE_TIMEOUT=300
CACHE_KEY_PREFIX=agentic_studio

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Google Generative AI (Optional)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# PostHog Analytics (Optional)
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com
POSTHOG_SECRET_KEY=changeme
POSTHOG_DATABASE_URL=postgresql://studio:studio@pgvector:5432/studio
DITTO_DATABASE_URL=postgresql://studio:studio@pgvector:5432/studio

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/agentic_studio.log

# Enable console logging
LOG_TO_CONSOLE=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session settings
SESSION_TIMEOUT=3600

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# Circuit breaker configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=30
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3

# Health monitoring
HEALTH_CHECK_INTERVAL=30
ENABLE_HEALTH_MONITORING=True

# Quality gate settings
QUALITY_GATE_ENABLED=True
QUALITY_GATE_TIMEOUT_SECONDS=30

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================

# Data processing settings
MAX_BATCH_SIZE=100
PROCESSING_TIMEOUT=300

# Idea processing configuration
MAX_IDEAS_PER_REQUEST=10
IDEA_VALIDATION_ENABLED=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features
DEV_MODE=True

# Auto-reload on code changes
AUTO_RELOAD=True

# Enable debug toolbar
DEBUG_TOOLBAR=True

# Test database URL (for running tests)
TEST_DATABASE_URL=postgresql://studio:studio@localhost:5432/studio_test
